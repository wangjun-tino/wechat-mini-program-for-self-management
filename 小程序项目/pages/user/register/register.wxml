<!--pages/user/register/register.wxml-->
<view class='main'>
  <form bindsubmit='formSubmit' bindreset='formreset'>
    <view class='main_text'>
      <text class='login_word'>REGISTER</text>
      <input name='username' class='input' placeholder='用户名'/>
      <input name='password' class='input' placeholder='密码'/>
      <input name='re_password' class='input' placeholder='重新输入密码'/>
      <view>
        <button form-type='submit' class='login_btn' size='mini'>注册</button>
      </view>
    </view>
  </form>
</view>
